//Satellite.cc

#include "Satellite.h"

#include <iostream>
#include <cmath>

using namespace std;

Satellite::Satellite(double x, double y, double z, double vx, double vy, double vz, double m) {
  x_ = x;
  y_ = y;
  z_ = z;
  vx_ = vx;
  vy_ = vy;
  vz_ = vz;
  m_ = m; // kg
}

// Metodi di accesso - getters
double Satellite::X() const {return x_;}
double Satellite::Y() const {return y_;}
double Satellite::Z() const {return z_;}
double Satellite::Vx() const {return vx_;}
double Satellite::Vy() const {return vy_;}
double Satellite::Vz() const {return vz_;}
double Satellite::M() const {return m_;}

// Metodi di aggiornamento - setters
void Satellite::setX(double x) {x_ = x;}
void Satellite::setY(double y) {y_ = y;}
void Satellite::setZ(double z) {z_ = z;}
void Satellite::setVx(double vx) {vx_ = vx;}
void Satellite::setVy(double vy) {vy_ = vy;}
void Satellite::setVz(double vz) {vz_ = vz;}
void Satellite::setM(double m)  {m_ = m;}

// Metodi accessori - utility functions
double Satellite::r() {
  return sqrt(x_*x_+ y_*y_ +z_*z_);
}

void Satellite::print() const {
  cout << "Il satellite ha le seguenti propietÃ \nX: " << x_ << " m" << "\nY " << y_ << "\nZ: " << z_ << " m" << x_ << " m" << endl;
}

