//Satellite.h

class Satellite {
 public:
  Satellite(double x, double y, double z, double vx, double vy, double vz, double m);

// Metodi di accesso - getters
  double X() const;
  double Y() const; 
  double Z() const; 
  double Vx() const; 
  double Vy() const; 
  double Vz() const; 
  double M() const;

// Metodi di aggiornamento - setters
  void setX(double x);
  void setY(double y);
  void setZ(double z);
  void setVx(double vx);
  void setVy(double vy);
  void setVz(double vz); 
  void setM(double m); 

// Metodi accessori - utility functions
  double r();
  void print() const;

 private:
  double x_;
  double y_;
  double z_;
  double vx_;
  double vy_;
  double vz_;
  double m_;  
};
